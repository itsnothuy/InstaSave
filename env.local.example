# Instagram API Configuration (Updated for Instagram API with Instagram Login)
# Get these from https://developers.facebook.com/apps/your-app-id/instagram-api/api-setup/
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/callback

# Production URLs (update when deploying)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Environment
NODE_ENV=development

# Instagram Graph API Version (v19.0 is current as of Dec 2024)
INSTAGRAM_GRAPH_API_VERSION=v19.0

# Optional: If you also need Facebook features
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
